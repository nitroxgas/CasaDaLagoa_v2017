<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="servidor_mqtt"
        android:title="@string/pref_serv_mqtt_display_name"
        android:defaultValue="@string/pref_serv_mqtt_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="token_mqtt"
        android:title="@string/pref_token_mqtt_display_name"
        android:defaultValue="@string/pref_token_mqtt_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="token_passw"
        android:title="@string/pref_token_passw_display_name"
        android:defaultValue="@string/pref_token_passw_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textPassword"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>